<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/product"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/p"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:contentDescription="@string/gu"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#010101"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brand_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#010101"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/color_cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#010101"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pp"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="#f50606"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/show_product_qty"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_buyqty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/buyqtytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/buy_qty"
            android:textColor="#000"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/buy_qty"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sub_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/gu"
                android:src="@drawable/sub_btn" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="50dip"
                android:layout_height="40dip"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/add_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/gu"
                android:src="@drawable/add_btn" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:background="#e5e5e5" />

</LinearLayout>