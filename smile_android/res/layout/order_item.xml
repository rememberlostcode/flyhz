<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baise"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/product"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/p"
                android:layout_width="82dip"
                android:layout_height="82dip"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baise"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/shenhuise"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baise"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/brand_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/qianhuise"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/color_cate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dip"
                        android:textColor="@drawable/qianhuise"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:orientation="horizontal" >
	                    <TextView
	                        android:id="@+id/pp"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_marginRight="10dip"
	                        android:textColor="@drawable/dahong"
	                        android:textSize="16sp" />
	                    
	                    <TextView
	                        android:id="@+id/huise_pp"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@drawable/shenhuise"
	                        android:textSize="14sp"
	                        android:visibility="gone"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/show_product_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip"
                        android:textColor="@drawable/shenhuise"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buy_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="top"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sub_qty"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginRight="2dip"
                android:src="@drawable/sub_btn_bg" />

            <TextView
                android:id="@+id/qty"
                android:layout_width="40dip"
                android:layout_height="22dip"
                android:background="@drawable/text_view_bg"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/add_qty"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginLeft="2dip"
                android:src="@drawable/add_btn_bg" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/qianhuise" />

</LinearLayout>