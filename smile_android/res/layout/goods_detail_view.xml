<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <include
            android:id="@+id/pic_pager"
            layout="@layout/pic_pager" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/qianhuise" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/shenhuise"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/shenhuise"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_layout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@drawable/dahong"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/qianhuise" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/choose_color"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|top"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/choose_color"
                android:textColor="@drawable/shenhuise"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/select_color"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|top"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:textColor="@drawable/shenhuise"
                android:textSize="18sp" />
        </LinearLayout>

        <com.holding.smile.myview.MyLinearLayout
            android:id="@+id/color_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:paddingLeft="4dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/qianhuise" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="left|top"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="@string/good_desc"
            android:textColor="@drawable/shenhuise"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left|top"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textColor="@drawable/qianhuise"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>