<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="#ffffff"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/detail_p"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:scaleType="centerInside"
        android:contentDescription="@string/gu"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/detail_p"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="10dip"
	    android:background="#ffffff"
        >
        
        <TextView
	        android:id="@+id/detail_n"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#010101"
	        android:textSize="14sp"
	        android:textStyle="bold" />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/detail_n"
            android:orientation="horizontal">
            <TextView
	            android:id="@+id/detail_pp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#f50606"
	            android:textSize="16sp" />
	        
	        <TextView
	            android:id="@+id/detail_color"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:gravity="right"
	            android:layout_marginRight="20dip"
	            android:textColor="#e5e5e5"
	            android:textSize="16sp" />
        </LinearLayout>
	
    </RelativeLayout>

</RelativeLayout>