<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_body_bg" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_body_bg"
        android:fadingEdge="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/new_personal_title_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:gravity="left|center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12.0dip"
                        android:shadowColor="@color/shadow_color"
                        android:shadowDx="0.5"
                        android:shadowDy="0.8"
                        android:shadowRadius="1.0"
                        android:singleLine="true"
                        android:text="@string/account_account"
                        android:textColor="@color/white"
                        android:textSize="17.5sp" />

                    <TextView
                        android:id="@+id/my_smile_account"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/wallet_margin"
                        android:layout_marginRight="5.0dip"
                        android:lines="2"
                        android:maxEms="8"
                        android:shadowColor="@color/shadow_color"
                        android:shadowDx="0.5"
                        android:shadowDy="0.8"
                        android:shadowRadius="1.0"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="17.5sp" />
                </LinearLayout>

                <!-- 订单开始 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:background="@drawable/new_table_row_bg"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/mysmile_myorders_layout_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/new_personal_status_tab_left_pressed"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10.0dip" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_ic_accout_pre_pay"
                            android:gravity="right" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_accout_item_size"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.0dip"
                            android:text="@string/account_order_pre_pay"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <View
                            android:layout_width="1.0dip"
                            android:layout_height="fill_parent"
                            android:background="@drawable/repeat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mysmile_myorders_layout_res"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/new_personal_status_tab_center_pressed"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10.0dip" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_ic_accout_pre_receive"
                            android:gravity="right"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_accout_item_size"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.0dip"
                            android:text="@string/account_order_pre_receive"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <View
                            android:layout_width="1.0dip"
                            android:layout_height="fill_parent"
                            android:background="@drawable/repeat" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mysmile_myorders_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/new_personal_tab_center_pressed"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10.0dip" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/new_ic_accout_order_finish"
                            android:gravity="right"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:src="@drawable/bg_accout_item_size"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.0dip"
                            android:text="@string/account_order_all"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 订单结束 -->


                <!-- 个人设置 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:layout_marginTop="6.0dip"
                    android:background="@drawable/new_table_row_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/mysmile_idcards_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_personal_tab_center_pressed"
                        android:gravity="center"
                        android:padding="@dimen/wallet_margin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3.0dip"
                            android:contentDescription="@string/more"
                            android:src="@drawable/acs_artificial" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_weight="1.0"
                            android:text="@string/my_idcards"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />

                        <TextView
                            android:id="@+id/mysmile_miss_idcard_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5.0dip"
                            android:textColor="#fffd4ca3"
                            android:background="@drawable/new_circle_btn"
                            android:textSize="@dimen/app_textsize_main_new"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/acs_right_arrwo" />
                    </LinearLayout>

                    <View
                        android:id="@+id/mysmile_idcards_layout_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@color/textarea_divider" />

                    <LinearLayout
                        android:id="@+id/mysmile_setting_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_personal_tab_center_pressed"
                        android:gravity="center"
                        android:paddingBottom="@dimen/mysmile_topandbuttom"
                        android:paddingLeft="@dimen/wallet_margin"
                        android:paddingRight="@dimen/wallet_margin"
                        android:paddingTop="@dimen/mysmile_topandbuttom" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/new_menu_set_select" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6.0dip"
                            android:layout_weight="1.0"
                            android:text="@string/personal_information"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/acs_right_arrwo" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@color/textarea_divider" />

                    <LinearLayout
                        android:id="@+id/mysmile_mycoupon_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_personal_tab_center_pressed"
                        android:gravity="center"
                        android:padding="@dimen/wallet_margin" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/new_ic_accout_favourables" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_weight="1.0"
                            android:text="@string/account_favourables"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/acs_right_arrwo" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@color/textarea_divider" />

                    <LinearLayout
                        android:id="@+id/mysmile_clearcache_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/new_personal_tab_center_pressed"
                        android:gravity="center"
                        android:paddingBottom="@dimen/mysmile_topandbuttom"
                        android:paddingLeft="@dimen/wallet_margin"
                        android:paddingRight="@dimen/wallet_margin"
                        android:paddingTop="@dimen/mysmile_topandbuttom" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/new_menu_set_select" />

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_weight="1.0"
                            android:text="@string/clear_cache"
                            android:textColor="@color/personal_text_color"
                            android:textSize="@dimen/app_textsize_main" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/more"
                            android:src="@drawable/acs_right_arrwo" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mysmile_contact_us_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_marginRight="12.0dip"
                    android:background="@drawable/new_personal_tab"
                    android:gravity="center"
                    android:padding="@dimen/wallet_margin" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:contentDescription="@string/more"
                        android:src="@drawable/new_ic_accout_custom" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_weight="1.0"
                        android:text="@string/contact_us"
                        android:textColor="@color/personal_text_color"
                        android:textSize="@dimen/app_textsize_main" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/more"
                        android:src="@drawable/acs_right_arrwo" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>