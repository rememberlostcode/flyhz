<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/rouse2"
    android:gravity="bottom"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/qianhuise" >
    </View>

    <RelativeLayout
        android:id="@+id/calculate_total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rouse1"
        android:padding="6dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/all_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/checkbox_bg"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计（"
                    android:textColor="@drawable/shenhuise"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@drawable/shenhuise"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个商品）："
                    android:textColor="@drawable/shenhuise"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@drawable/dahong"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/totalmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@drawable/dahong"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/payoff_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/nowbuy_bg"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="4dp"
                android:text="结算"
                android:textColor="@drawable/baise" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_my_orders"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rouse1"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/footer_my_orders_all_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/checkbox_bg"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/footer_my_orders_all_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/nowbuy_bg"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="4dp"
            android:text="结算"
            android:textColor="@drawable/baise" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainfooter"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone" >
        
        <LinearLayout
            android:id="@+id/mainfooter_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" 
            android:background="@drawable/mainfooter_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainfooter_one_bg" />
            <!-- 
            <TextView
                android:id="@+id/mainfooter_jptj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommend_goods"
                android:textColor="@drawable/mainfooter_itemcolor" />
             -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" 
            android:background="@drawable/mainfooter_bg">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainfooter_two_bg" />
            
            <!-- 
            <TextView
                android:id="@+id/mainfooter_phb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_charts"
                android:textColor="@drawable/mainfooter_itemcolor" />
             -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" 
            android:background="@drawable/mainfooter_bg">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainfooter_three_bg" />

            <!-- 
            <TextView
                android:id="@+id/mainfooter_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textColor="@drawable/mainfooter_itemcolor" />
             -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" 
            android:background="@drawable/mainfooter_bg">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainfooter_four_bg" />
            
            <!-- 
            <TextView
                android:id="@+id/mainfooter_grsz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_cart"
                android:textColor="@drawable/mainfooter_itemcolor" />
             -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" 
            android:background="@drawable/mainfooter_bg">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainfooter_five_bg" />
	
            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@drawable/mainfooter_itemcolor" />
             -->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainfooter_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qianhuise"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/nowbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nowbuy_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="立即购买"
                android:textColor="@drawable/baise" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/addcart_bg"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="加入购物车"
                android:textColor="@drawable/baise" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>