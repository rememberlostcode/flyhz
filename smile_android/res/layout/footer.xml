<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#36293f"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/calculate_total"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#C9C9C9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/all_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:text="@string/select_all"
            android:textColor="#4A4A4A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:textColor="#f50606"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/payoff_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:layout_marginRight="1dip"
            android:background="#C9C9C9"
            android:contentDescription="@string/gu"
            android:src="@drawable/payoff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_my_orders"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="#C9C9C9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/footer_my_orders_all_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/select_all"
            android:textColor="#4A4A4A"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/footer_my_orders_all_pay"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_gravity="right"
            android:layout_marginRight="1dip"
            android:background="#C9C9C9"
            android:contentDescription="@string/gu"
            android:src="@drawable/payoff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainfooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/mainfooter_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mainfooter_jptj"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:hint="@string/recommend_goods" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mainfooter_phb"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:hint="@string/the_charts" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mainfooter_search"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:hint="@string/search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mainfooter_grsz"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:hint="@string/shopping_cart" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainfooter_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:background="@android:color/transparent"
                android:hint="@string/more" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainfooter_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e5e5e5"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/nowbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/now_buy"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:contentDescription="@string/gu"
                android:src="@drawable/now_buy_btn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/add_cart"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:contentDescription="@string/gu"
                android:src="@drawable/add_cart_btn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>